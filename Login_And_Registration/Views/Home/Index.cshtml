@model User
@{
    ViewData["Title"] = "Home Page";
}
    
    
<div class="container mt-4 ">

    <div class="d-flex flex-row justify-content-evenly">
        <h1 class="text-center">Register to this cool site!</h1>
        <a href="login"><h3>Login</h3></a>
    </div>
    <div class="row mt-4 ">

        <div class="col-1"></div>
        <form class="mt-4 col-3 d-flex flex-column justify-conten-evenly " action="/register" method="post">
        <span class="text-danger" asp-validation-for="FirstName"></span>
        <label asp-for="FirstName"></label>
        <input type="text" asp-for="FirstName">
        <span class="text-danger" asp-validation-for="LastName"></span>
        <label asp-for="LastName"></label>
        <input type="text" asp-for="LastName">
        <span class="text-danger" asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input type="text" asp-for="Email">
        <span class="text-danger" asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input type="password"  asp-for="Password">
        <span class="text-danger" asp-validation-for="Confirm"></span>
        <label asp-for="Confirm"></label>
        <input type="password" asp-for="Confirm">
        <button class="mt-4 w-50" type="submit" >Sign up Now</button>

    </form>
        <div class="col-7"></div>
    </div>
    
</divConfirm
