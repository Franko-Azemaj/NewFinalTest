@model Hobby 
<h2>@Model.Name</h2>

<div class="container m-5 p-2 ">

    <div class="row">

            <p><h5>Description:</h5> @Model.Description</p>

    </div>
    <div class="row">

        <div class="col-sm-6">
            <h4>@Model.Name Enthusiast</h4>
            @foreach (var enthusiast in Model.Enthusiasts)
            {
                <h3>@enthusiast.UseriQePelqen.FirstName</h3>
            }
        </div>
        <div class="col-sm-6">
            <h2>Become an Enthusiast!</h2>
            <form action="/addHobby" method="post">
                <input name="@nameof(Hobby.HobbyId)" value="@Model.HobbyId" type="hidden"/>
                <button class="mb-5" type="submit">
                    Add to Hobbies 
                </button>
            </form>
            <h4><a class="" href="/hobbies">Hobies</a></h4>

        </div>
    </div>
</div>


