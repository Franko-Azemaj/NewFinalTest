@model Hobby
<h2 class="text-center">Create a Hobby</h2>

<div class="container">
    <div class="row">
        <form class="col-sm-6 d-flex flex-column" action="/hobbies/new" method="post">

            <span asp-validation-for="Name" class="text-danger"></span>
            <label asp-for="Name"></label>
            <input asp-for="Name">
            <span asp-validation-for="Description" class="text-danger"></span>
            <textarea asp-for="Description" cols="30" rows="6"></textarea>
            <button type="submit mt-3">Create</button>
        </form>
       
    </div>
</div>
